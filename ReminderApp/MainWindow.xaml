<Window x:Class="ReminderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReminderApp"
        xmlns:models="clr-namespace:ReminderApp.Models"
        xmlns:vms="clr-namespace:ReminderApp.VMs"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">

    <Window.DataContext>
        <vms:MainVM/>
    </Window.DataContext>
    
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Invisible mode" Command="{Binding SwitchToInvisibleMode}"/>
        </Menu>
            
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Command="{Binding SwitchToCurrentTasks}">List of current tasks</Button>
            <Button Grid.Row="1" Command="{Binding SwitchToCompletedTasks}">List of completed tasks</Button>
        </Grid>
    </DockPanel>
</Window>
