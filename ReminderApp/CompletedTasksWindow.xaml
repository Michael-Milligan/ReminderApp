<Window x:Class="ReminderApp.CompletedTasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReminderApp"
        mc:Ignorable="d"
        Title="CompletedTasksWindow" Height="450" Width="800">
    <DockPanel>
        <Menu/>

        <Grid ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" FontSize="16" HorizontalContentAlignment="Center">TaskId</Label>
            <Label Grid.Row="0" Grid.Column="1" FontSize="16" HorizontalContentAlignment="Center">CompletionDate_Time</Label>
        </Grid>
    </DockPanel>
</Window>
