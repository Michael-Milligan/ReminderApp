<Window x:Class="ReminderApp.ListOfCurrentTasks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReminderApp"
        mc:Ignorable="d"
        Title="ListOfCurrentTasks" Height="300" Width="500">
    <DockPanel x:Name="Panel">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Add" Click="Add_Click"></MenuItem>
        </Menu>
        <Grid DockPanel.Dock="Bottom" ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="12*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
            </Grid.RowDefinitions>
            <ScrollBar Grid.RowSpan="10" Grid.Column="3" HorizontalAlignment="Right"/>
            <Label Grid.Row="0" Grid.Column="0" HorizontalContentAlignment="Center">ID</Label>
            <Label Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Center">Task</Label>
            <Label Grid.Row="0" Grid.Column="2" HorizontalContentAlignment="Center">Date_Time</Label>
        </Grid>
    </DockPanel>
</Window>
